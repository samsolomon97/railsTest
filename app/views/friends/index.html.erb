<div id="friends">
  <table class="table-responsive table table-striped table-hover">
    <thead class="table-dark">
      <th></th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email Address</th>
      <th>Contact</th>
      <th>Friend Duration</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <% @friends.each_with_index do |friend, index| %>
      <tr>
        <td><%=index+1%></td>
        <td><%=  friend.first_name %></td>
        <td><%=  friend.last_name %></td>
        <td><%=  friend.email_address %></td>
        <td><%=  friend.phone %></td>
        <td><%=  friend.friends_since %></td>
        
        <td><%= link_to "View", friend, class: "btn btn-light border btn-sm" %></td>
        <td><%= link_to "Edit", edit_friend_path(friend), class: "btn btn-light border btn-sm"  %></td>
        <td><%= button_to "delete", friend, class: "btn btn-light border btn-sm", data: { confirm: 'Are you sure?' }, method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
    
  </table>
  
</div>

<%= link_to "New friend", new_friend_path, class: "btn btn-outline-dark" %>
